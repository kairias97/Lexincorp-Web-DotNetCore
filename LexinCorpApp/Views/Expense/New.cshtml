@model Expense
@{
    ViewData["Title"] = "Agregar tipo de gasto";
}
<h4>Agregar nuevo tipo de gasto</h4>
<br />
@if (ViewBag.AddedExpense ?? false)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <p>Tipo de gasto registrado exitosamente!</p>

        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>

}
<form asp-action="New" asp-controller="Expense" role="alert">
    @if (ViewData.ModelState.Any(x => x.Value.Errors.Any()))
    {
        // Bootstrap 2 = "alert-error", Bootstrap 3 and 4 = "alert-danger"
        <div class="alert alert-danger alert-dismissible fade show">
            @Html.ValidationSummary(false, "Errores de validación:")
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>

        </div>
    }
        <div class="form-row">
            <div class="form-group col-md-5">
                <label for="Name">Nombre del gasto*:</label>
                <input type="text" class="form-control" asp-for="Name" required />
            </div>
            <div class="form-group  col-md-5">
                <label for="Amount">Monto asociado (USD)*:</label>
                <input type="number" step="0.01" min="0" class="form-control" asp-for="Amount" required />
            </div>
            <div class="form-group" col-md-2>
                <br />
                <div class="form-check">
                    <input type="checkbox" asp-for="IsReadOnly" />
                    <label for="@Model.IsReadOnly">Costo editable</label>
                </div>
            </div>

        </div>
    <div class="form-row">
        <div class="form-group col-md-5">
            <label for="SpanishDescription">Descripción en Español*:</label>
            <input type="text" class="form-control" asp-for="SpanishDescription" required spellcheck="true" lang="es" />
        </div>
        <div class="form-group offset-md-1 col-md-5">
            <label for="EnglishDescription">Descripción en Inglés*:</label>
            <input type="text" class="form-control" asp-for="EnglishDescription" required spellcheck="true" lang="en" />
        </div>

    </div>
    <button type="submit" class="btn btn-primary">Agregar</button>

    <br />
</form>
<br />
