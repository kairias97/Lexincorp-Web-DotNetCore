@{
    ViewData["Title"] = "Edit";
}
@model Expense
<h4>Editar tipo de gasto</h4>
<br />
@if (ViewBag.UpdatedExpense ?? false)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <p>Tipo de gasto actualizado exitosamente!</p>

        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>

}
<form asp-action="Edit" asp-controller="Expense" role="alert">
    @if (ViewData.ModelState.Any(x => x.Value.Errors.Any()))
    {
        // Bootstrap 2 = "alert-error", Bootstrap 3 and 4 = "alert-danger"
        <div class="alert alert-danger alert-dismissible fade show">
            @Html.ValidationSummary(false, "Errores de validación:")
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>

        </div>
    }
    <input asp-for="Id" hidden/>
    <div class="form-row">
        <div class="form-group col-md-5">
            <label for="SpanishDescription">Descripción en Español*:</label>
            <input type="text" class="form-control" asp-for="SpanishDescription" required />
        </div>
        <div class="form-group offset-md-1 col-md-5">
            <label for="EnglishDescription">Descripción en Inglés*:</label>
            <input type="text" class="form-control" asp-for="EnglishDescription" required />
        </div>

    </div>
    <div class="form-row">
        <div class="form-group col-md-5">
            <label for="Amount">Monto asociado (USD)*:</label>
            <input type="number" step="0.01" min="0" class="form-control" asp-for="Amount" required />
        </div>
        <div class="form-group offset-md-1 col-md-5" >
            <label for="Active">Estado*:</label>
            <div class="form-check">
                <input class="form-check-input" type="radio" asp-for="Active" value="true" checked>
                <label class="form-check-label" for="Active">
                    Activo
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" asp-for="Active" value="false">
                <label class="form-check-label" for="Active">
                    Inactivo
                </label>
            </div>
        </div>

    </div>
    <button type="submit" class="btn btn-primary">Guardar cambios</button>

    <br />
</form>
<br />

