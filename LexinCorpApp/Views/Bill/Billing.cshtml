                    <th class="col-4">Concepto</th>
                    <th class="col-1">Horas</th>
                    <th class="col-1">Precio</th>
                    <th class="col-4">Asociado a</th>
                    <th class="col-1">Alias</th>

                </tr>
            </thead>
            <tbody class="table-wrapper-scroll-y" style="cursor: default;">
                

            </tbody>
        </table>

    </div>
    <div class="form-row">
        <button class="btn btn-primary" id="btnGenerate" type="button" disabled>Generar factura</button>
        <a id="download" download="Factura.pdf" hidden></a>
        <a href="#placeholderSuccess" id="goTop" hidden></a>
    </div>

    <br />
    <div id="placeholderSuccess">

    </div>
    <div id="placeholderError">

    </div>
