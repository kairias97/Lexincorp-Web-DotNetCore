@model LoginViewModel
@{
    Layout = null;
}
@if (ViewBag.WrongCredentials ?? false)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <p>Usuario o contraseña incorrectos!</p>

        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}
<form asp-action="Login" asp-controller="Account" method="post">
    @if(ViewData.ModelState.Any(x => x.Value.Errors.Any()))
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @Html.ValidationSummary(false, "Errores de validación:")
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
    <div class="text-center container">
        <h4>Inicio de sesión</h4>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="@Model.Credentials.Username">Nombre de usuario:</label>
                <input type="text" asp-for="@Model.Credentials.Username" class="form-control" required />
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="@Model.Credentials.Password">Contraseña:</label>
                <input type="password" asp-for="@Model.Credentials.Password" class="form-control" required />
            </div>
        </div>
        <div class="form-row">
            <button type="submit" class="btn btn-primary">Iniciar sesión</button>
        </div>
    </div>
</form>

