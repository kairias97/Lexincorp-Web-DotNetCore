@model DashboardViewModel
<script type="text/javascript">
    $(function () {
        $("body").css("background-color", "lightgrey");
    });
</script>
<div class="container-fluid">
    <div class="row">
        <div class="offset-md-1 col-md-10">
            <div class="row" style="margin-top:20px">
                <div class="col-md-5 row bg-light rounded">
                    <div class="offset-md-2 col-md-2" style="margin-top:20px">
                        <i class="fas fa-4x fa-hourglass-end"></i>
                    </div>
                    <div class="col-md-8 row">
                        <div class="col-12 row">
                            <div class="col-12 text-center">
                                <h3>
                                    @Model.HoursWorked
                                </h3>
                            </div>
                        </div>
                        <div class="col-12 row">
                            <div class="col-12 text-center">
                                <h4 class="text-muted">
                                    Horas trabajadas
                                </h4>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="offset-md-1 col-md-5 row bg-light rounded">
                    <div class="offset-md-2 col-md-2" style="margin-top:20px">
                        <i class="fas fa-umbrella-beach fa-4x"></i>
                    </div>
                    <div class="col-md-8 row">
                        <div class="col-12 row">
                            <div class="col-12 text-center">
                                <h3>
                                    @Model.Vacations
                                </h3>
                            </div>
                        </div>
                        <div class="col-12 row">
                            <div class="col-12 text-center">
                                <h4 class="text-muted">
                                    Vacaciones acumuladas (días)
                                </h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="offset-md-1 col-md-10">
            <div class="row" style="margin-top:20px">
                <div class="col-md-11 row bg-light rounded text-center">
                    <div class="row col-12" style="margin-top:20px">
                        <div class="col-12 row">
                            <div class="col-12 text-center">
                                <h4 class="text-muted">
                                    Actividades recientes
                                </h4>
                            </div>
                        </div>
                    </div>
                    @if (Model.Activities.Count > 0)
                    {
                        <div class="table-responsive" style="margin-top:20px">
                            <table class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>Cliente</th>
                                        <th>Servicio</th>
                                        <th>Horas</th>
                                        <th>Tipo de actividad</th>
                                        <th>Fecha</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var activity in Model.Activities)
                                    {
                                    <tr>
                                        <td>@activity.Client.Name</td>
                                        <td>@activity.Service.Name</td>
                                        <td>@Math.Round(activity.HoursWorked, 2)</td>
                                        @if (activity.ActivityType == ActivityTypeEnum.Package)
                                        {
                                            <td>Paquete</td>
                                        }
                                        else if (activity.ActivityType == ActivityTypeEnum.Retainer)
                                        {
                                            <td>Retainer</td>
                                        }
                                        else if (activity.ActivityType == ActivityTypeEnum.Item)
                                        {
                                            <td>Ítem</td>
                                        }
                                        else if (activity.ActivityType == ActivityTypeEnum.Hourly)
                                        {
                                            <td>Hora</td>
                                        }
                                        <td>@activity.RealizationDate.ToString("dd/MM/yyyy")</td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="row col-12" style="margin-top:20px;margin-bottom:20px;">
                            <div class="row col-12">
                                <a class="btn btn-primary" asp-controller="Activity" asp-action="History">Ver más</a>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="row col-12" style="margin-top:20px; margin-bottom:20px">
                            <div class="col-12 row">
                                <div class="col-12 text-center">
                                    <h3>
                                        No hay actividades registradas
                                    </h3>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
