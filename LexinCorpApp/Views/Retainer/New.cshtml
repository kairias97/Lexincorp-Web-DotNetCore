
@{
    ViewData["Title"] = "Agregar tipo de retainer";
}
@model Retainer
<h2>Nuevo tipo de retainer</h2>
<br />
@if (ViewBag.AddedRetainer ?? false)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <p>Tipo de retainer registrado exitosamente!</p>

        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>

}
<form asp-action="New" method="post">
    @if (ViewData.ModelState.Any(x => x.Value.Errors.Any()))
    {
        // Bootstrap 2 = "alert-error", Bootstrap 3 and 4 = "alert-danger"
        <div class="alert alert-danger alert-dismissible fade show">
            @Html.ValidationSummary(false, "Errores de validación:")
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>

        </div>
    }

    <div class="form-row">
        <div class="form-group col-md-5">
            <label for="Name">Nombre en español (título de lista)*:</label>
            <input type="text" class="form-control" asp-for="SpanishName" required spellcheck="true" lang="es"/>
        </div>
        <div class="form-group col-md-5">
            <label for="Name">Nombre en inglés*:</label>
            <input type="text" class="form-control" asp-for="EnglishName" required spellcheck="true" lang="en"/>
        </div>

    </div>
    <button type="submit" class="btn btn-primary">Agregar</button>

    <br />
</form>
<br />



