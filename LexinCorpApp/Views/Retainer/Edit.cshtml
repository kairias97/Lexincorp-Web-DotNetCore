
@{
    ViewData["Title"] = "Edit";
}
@model Retainer
<h2>Editar tipo de retainer</h2>
<br />
@if (ViewBag.UpdatedRetainer ?? false)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <p>Tipo de retainer actualizado exitosamente!</p>

        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>

}
<form asp-action="Edit" method="post">
    @if (ViewData.ModelState.Any(x => x.Value.Errors.Any()))
    {
        // Bootstrap 2 = "alert-error", Bootstrap 3 and 4 = "alert-danger"
        <div class="alert alert-danger alert-dismissible fade show">
            @Html.ValidationSummary(false, "Errores de validación:")
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>

        </div>
    }

    <div class="form-row">
        <input type="number" hidden asp-for="Id" />
        <div class="form-group col-md-5">
            <label for="Name">Nombre en español (título de lista)*:</label>
            <input type="text" class="form-control" asp-for="SpanishName" required spellcheck="true" lang="es" />
        </div>
        <div class="form-group col-md-5">
            <label for="Name">Nombre en inglés*:</label>
            <input type="text" class="form-control" asp-for="EnglishName" required spellcheck="true" lang="en" />
        </div>

    </div>
    <div class="form-row">
        <div class="form-group col-md-5">
            <label for="Active">Estado*:</label>
            <div class="form-check">
                <input class="form-check-input" type="radio" asp-for="Active" value="true" checked>
                <label class="form-check-label" for="Active">
                    Activo
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" asp-for="Active" value="false">
                <label class="form-check-label" for="Active">
                    Inactivo
                </label>
            </div>
        </div>

    </div>
    <button type="submit" class="btn btn-primary">Guardar cambios</button>

    <br />
</form>
<br />
